################################################################################
### Head: Model fzf
##

mod_fzf () {
	#echo "mod_fzf"
	#echo "$@"

if ! is_command_exist 'fzf'; then

cat << EOF

## Need: fzf

	* https://github.com/junegunn/fzf

	$ pamac install fzf

EOF
	return 1
fi


	#https://en.wikipedia.org/wiki/Here_document
local selected=$(fzf << EOF
all
none
cvim
hvim
ivim
lvim
mvim
svim
EOF
)


echo
echo "## Selected: $selected"
echo

main_run_sub_cmd "$selected"


}

