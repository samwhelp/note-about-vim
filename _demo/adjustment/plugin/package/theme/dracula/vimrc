set nocompatible

scriptencoding utf-8


""
" ## Prepare
" ```
" mkdir -p ~/.cache/xvim/site/pack/theme/start
" cd ~/.cache/xvim/site/pack/theme/start
" git clone https://github.com/dracula/vim.git dracula
" ```
""

let &packpath = '~/.cache/xvim/site' . ',' . &packpath
"set packpath+=~/.cache/xvim/site

packadd! dracula

syntax enable

set background=dark

colorscheme dracula
